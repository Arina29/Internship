@model System.Collections.Generic.List<MED.ViewModels.DoctorFormViewModels>	

<div id="colorlib-doctor">
    <div class="container">
        <div class="row animate-box">
            <div class="col-md-6 col-md-offset-3 text-center colorlib-heading">
                <h2>Our Doctors</h2>
            </div>
        </div>
       
        @{ var iteration = 0;}
        @foreach (var item in Model)
        {
            iteration++;
            <div class="col-md-3 col-sm-6 col-xs-12 animate-box text-center">
                <div class="doctor">
                    <div class="staff-img" style="background-image: url('@Url.Content("~" + @item.ImagePath)'"></div>
                    <div class="desc">
                        <h3><a href="@Url.Action("Profile", "DoctorProfile", new {UserId = item.UserId})">Dr. @item.Name @item.Surname</a></h3>
                        <p> @item.Specialty </p>
                        <ul class="colorlib-social">
                            <li><a href="#"><i class="icon-facebook2"></i></a></li>
                            <li><a href="#"><i class="icon-twitter2"></i></a></li>
                            <li><a href="#"><i class="icon-linkedin2"></i></a></li>
                            <li><a href="#"><i class="icon-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            if(iteration == 4)
            {
                iteration = 0;
                <br/>
            }
        }
    </div>
</div>