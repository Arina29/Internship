@model MED.Presentation.Models.DoctorFormViewModels
@{
    ViewBag.Title = "DoctorForm";
}
<style>
    .form-control {
        color: aliceblue !important;
    }
</style>

<script src="~/Scripts/jquery-3.3.1.js"></script>

@using (Html.BeginForm("DoctorForm", "DoctorProfile", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    <footer id="colorlib-footer" role="contentinfo">
        <div class="overlay"></div>
        <div class="container">
            <div class="row row-pb-md">
                <div class="row animate-box  text-center">
                    <h2 style="color:white">Profile Settings</h2>
                </div>
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <form action="#" class="appointment-wrap animate-box">

                    @if (Model.ImagePath != null)
                    {
                        <div class="form-group" style="padding-left: 200px">
                            <img id="profileImg" src="@Model.ImagePath" alt="No image" width="300px" height="auto" style="padding-left: 18px" />
                        </div>
                    }
                    else
                    {
                        <div class="form-group" style="padding-left: 200px">
                            <img id="profileImg" src="~/assets/avatar.png" alt="No image" width="300px" height="auto" style="padding-left: 18px" />
                        </div>
                    }

                    <div class="form-group">
                        @Html.LabelFor(m => m.Image, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Image, new { @type = "file", id = "image" })
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Surname, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Mail, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Mail, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Experience, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Experience, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Specialization, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => x.SelectedSpecialization, new SelectList(Model.Specialization, "Id", "Name"), new { @class = "selectpicker form-control", @placeholder = "Choose your specialty", style = "background-color: #2a3948" })
                        </div>
                    </div>



                    <div class="form-group">
                        @Html.LabelFor(m => m.Studies, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.Studies, new { @class = "form-control", rows = "5" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ConsultationPrice, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            <div class="form-inline">
                                @Html.TextBoxFor(m => m.ConsultationPrice, new { @class = "form-control" })
                                <span>$</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.UserId)
                    </div>

                    <div class="form-group">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.CreateTime)
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Register" class="btn btn-primary">
                    </div>
                </form>
            </div>
        </div>
    </footer>


}


    <script type="text/javascript">
        $(document).ready(function () {
            function readURL(input) {

                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('#profileImg').attr('src', e.target.result);
                    }

                    reader.readAsDataURL(input.files[0]);
                }
            }

            $("#image").change(function () {
                readURL(this);
            });
        });
    </script>